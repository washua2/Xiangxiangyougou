page {
  height: 100%;
}

.cates {
  height: 100%;
}

.cates .cates_container {
  height: calc(100vh - 90rpx);
  display: flex;
}

.cates .cates_container .left_menu {
  flex: 2;
}

.cates .cates_container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}

.active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}

.cates .cates_container .right_menu {
  flex: 5;
}

.goods_list {
  display: flex;
  flex-wrap: wrap;
  text-align: center;

}

.goods_title-box {
  height: 80rpx;
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
}

.goods_group .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}

.goods_list navigator {
  width: 33.33%;
  height: 150rpx;
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
}

.goods_name {
  width: 100%;
  overflow: hidden;
  font-size: 32rpx;
  white-space: nowrap;
  word-wrap: break-word;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  /*显示行数*/
}


.goods_list navigator image {
  width: 50%;
}